@model LoadsListingViewModel

<div class="container mt-5 mb-5">
    <div id="load-container">
        <table class="table table-hover">
            <thead class="table-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">City</th>
                    <th scope="col">Lane</th>
                    <th scope="col">Rate</th>
                    <th scope="col">Miles</th>
                    <th scope="col">Broker</th>
                    <th scope="col">Contact</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int numIndex = (Model.CurrentPage - 1) * Model.ItemsPerPage + 1;
                }
                @foreach(var load in Model.Items)
                {
                <tr>
                    <th scope="row">@numIndex</th>
                    <td>@load.City</td>
                    <td>@load.Lane</td>
                    <td>@load.Rate</td>
                    <td>@load.Miles</td>
                    <td>@load.Broker</td>
                    <td>@load.Contact</td>
                    <td><a href="/load/details/@load.Id" data-popup-open="popup" class="btn btn-outline-primary btn-sm">View More</a></td>
                    @{ numIndex++; }
                </tr>
                }
            </tbody>
        </table>
        <div>
            <ul class="pagination justify-content-center">

                @if (Model.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="?page=@(Model.CurrentPage - 1)">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                }
           
                @if (Model.TotalPages > 1)
                {
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                            <a class="page-link" href="?page=@i">@i</a>
                        </li>
                    }
                }

                @if (Model.CurrentPage < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="?page=@(Model.CurrentPage + 1)">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                }

            </ul>
        </div>
    </div>

    <div id="render-popup"></div>
</div>