@inherits UmbracoViewPage<LoadViewModel>

<div class="popup" data-popup="popup">
    <div class="popup-inner">
        <div class="popup-close" data-popup-close="popup">x</div>
        <div class="popup-content">
          <h5>@Model.LoadName</h5>
          <ul class="list-unstyled">
                <li><b>Pick Up City:</b> @Model.City</li>
                <li><b>Delivery City:</b> @Model.DeliveryCity</li>
                <li><b>Rate:</b> @Model.Rate</li>
                <li><b>Miles:</b> @Model.Miles</li>
                <li><b>Broker:</b> @Model.Broker</li>
                <li><b>Contact:</b>
                    <ul>
                        @foreach (var contact in @Model.Contact)
                        {
                            <li>@contact</li>
                        }
                    </ul>
                </li>
                <li><b>Commodity:</b> @Model.Commodity</li>
          </ul>

          <div id="map"></div>

        </div>
    </div>
</div>

<script>
    // Initialize the map
    var map = L.map('map').setView([@Model.Latitude, @Model.Longitude], 15);

    // Add OpenStreetMap tiles
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
    }).addTo(map);

    // Add a marker
    var marker = L.marker([@Model.Latitude, @Model.Longitude]).addTo(map);
</script>